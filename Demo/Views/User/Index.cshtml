@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    @Styles.Render("~/bundles/css/themes/base/css")
    @Styles.Render("~/bundles/css/bootstrap")
    @Styles.Render("~/bundles/css/site")

    @Scripts.Render("~/bundles/js/jquery")
    @Scripts.Render("~/bundles/js/modernizr")
    @Scripts.Render("~/bundles/js/bootstrap")
    @Scripts.Render("~/bundles/js/controls")

</head>
<body>
    <div class="container-fluid">
        <form id="logoncredentials" name="logoncredentials" action="/" method="post" class="shaded rounded-border form-horizontal row-fluid span8 offset5">
            <fieldset>
                <legend>Log On</legend>
                <div class="row-fluid control-group">
                    <label class="control-label" for="Username">UserName:</label>
                    <div class="controls">
                        <input type="text" id="username" name="username" placeholder="UserName">
                    </div>
                </div>
                <div class="row-fluid control-group">
                    <label class="control-label" for="password">Password</label>
                    <div class="controls">
                        <input type="password" id="password" name="password" placeholder="Password">
                    </div>
                </div>
                <div class="row-fluid control-group">
                    <div class="controls">
                        <input type="submit" class="btn btn-primary pull-right" value="Sign in" />
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</body>
</html>

<script>
    $(function () {
        $("#logoncredentials").validate({
            rules: {
                // simple rule, converted to {required:true}
                username: "required",
                password: "required"
            },
            messages: {
                username: "You must enter a username",
                password: "You must enter a password"
            }
        });

        $("#logoncredentials").on('submit', function (e) {
            var isvalidate = $("#logoncredentials").valid();
            if (isvalidate) {
                //e.preventDefault();
            }

        });
    });
</script>
