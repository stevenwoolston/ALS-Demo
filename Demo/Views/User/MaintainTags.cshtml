<div class="alert-error modal hide fade" id="cleardialog">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Are you sure?</h3>
    </div>
    <div class="modal-body">
        All samples associated with Diesel Engines will be removed. Are you sure?
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">No</button>
        <button class="btn btn-primary">Yes</button>
    </div>
</div>

<div class="alert-error modal hide fade" id="deletedialog">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Are you sure?</h3>
    </div>
    <div class="modal-body">
        Deleting this item will be irreversible. Are you sure?
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">No</button>
        <button class="btn btn-primary">Yes</button>
    </div>
</div>

<div class="modal hide fade" id="editdialog">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Modify this Tag</h3>
    </div>
    <div class="modal-body">
        <form action="#" method="get">
            <label for="displayname">Tag Name</label>
            <input type="text" class="input-large" id="displayname" name="displayname" />

            <label for="email">Comments</label>
            <input type="text" class="input-xlarge" id="email" name="email" />
        </form>
    </div>
    <div class="modal-footer">
        <input type="reset" value="Clear" class="btn-link" />&nbsp;&nbsp;
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button class="btn btn-primary">Save changes</button>
    </div>
</div>

<script>
    $(function () {

        $(".clearcontents").click(function () {
            //  show modal to clear contents
            $("#cleardialog").modal("show");
        });

        $("#newitem").click(function () {
            $("#editdialog #displayname").val("");
            $("#editdialog #email").val("");
            $("#editdialog").modal("show");
        });

        $(".edittag").click(function () {
            $("#editdialog #displayname").val("Diesel Engines");
            $("#editdialog #email").val("Duis autem vel eum iriure dolor in hendrerit in vulputate velit esse molestie consequat.");
            $("#editdialog").modal("show");
        });

        $(".deletetag").click(function () {
            //  show modal to delete tag
            $("#deletedialog").modal("show");
        });

        $(".modal-footer .btn-primary").click(function () {
            toastr.success("Those changes were successfully updated.", "Webtrieve9 Says");
            $(".modal").modal("hide");
        });

        $(".clearcontents").attr("title", "Click this icon to clear all items from the search results").tooltip();
        $(".edittag").attr("title", "Click this icon to edit this tag").tooltip();
        $(".deletetag").attr("title", "Click this icon to delete this tag").tooltip();
    });
</script>
