@{
    ViewBag.Title = "Reset Your Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li class="active">Reset Your Password</li>
</ul>

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span4 offset4">
            <form id="logoncredentials" name="logoncredentials" action="/" method="post" class="shaded rounded-border form-horizontal">
                <fieldset>
                    <legend>Reset your Password</legend>
                    <div class="row-fluid control-group">
                        <label class="control-label" for="Username">Email Address:</label>
                        <div class="controls">
                            <input type="text" id="username" name="username" placeholder="Email Address">
                        </div>
                    </div>
                    <div class="row-fluid control-group">
                        <div class="controls">
                            <input type="submit" class="btn btn-primary pull-right" value="Reset Password" />
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span4 offset4">
            <form id="resetcredentials" name="resetcredentials" action="/" method="post" class="shaded rounded-border form-horizontal">
                <fieldset>
                    <legend>Reset your Password</legend>
                    <div class="row-fluid control-group">
                        <label class="control-label" for="Username">Validation Key:</label>
                        <div class="controls">
                            <input type="text" id="temppassword" name="temppassword" placeholder="Validation Key">
                        </div>
                    </div>
                    <div class="row-fluid control-group">
                        <label class="control-label" for="Username">New Password:</label>
                        <div class="controls">
                            <input type="text" id="newpassword" name="newpassword" placeholder="New Password">
                        </div>
                    </div>
                    <div class="row-fluid control-group">
                        <label class="control-label" for="Username">Confirm New Password:</label>
                        <div class="controls">
                            <input type="text" id="confirmpassword" name="confirmpassword" placeholder="Confirm Password">
                        </div>
                    </div>
                    <div class="row-fluid control-group">
                        <div class="controls">
                            <button class="btn btn-primary pull-right"><i class="icon-key"></i>Logon</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
<script>
    $(function () {
        $("#logoncredentials").on("submit", function (e) {
            e.preventDefault();
            toastr.success("Your password has been reset and emailed to you.<br><br>Check your email and following the instructions.", "Webtrieve9 Says")
        });

        $("#resetcredentials .btn-primary").click(function () {
            $("#resetcredentials").submit();
        });
    });
</script>