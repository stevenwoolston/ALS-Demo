<div class="modal hide fade" id="dialog">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Modify this Address Book Item</h3>
    </div>
    <div class="modal-body">
        <form action="CRUD.htm" method="get">
            <label for="displayname">Display Name:</label>
            <input type="text" class="input-large" id="displayname" name="displayname" />

            <label for="email">Email Address:</label>
            <input type="text" class="input-xlarge"  id="email" name="email" />
        </form>
    </div>
    <div class="modal-footer">
        <input type="reset" value="Clear" class="btn-link" />&nbsp;&nbsp;
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button class="btn btn-primary">Save changes</button>
    </div>

</div>

<script>
    $(function () {

        $(".table tr").click(function () {
            ShowModal();
        });

        function ShowModal(field1value, field2value) {
            $(".modal #displayname").val("FirstName LastName");
            $(".modal #email").val("FirstName.LastName@emailaddress.com");
            $(".modal").modal("show");
        }

        $(".modal-footer .btn-primary").click(function () {
            toastr.success("Those changes were successfully updated.", "Webtrieve9 Says");
            $(".modal").modal("hide");
        });

        $("[title]").tooltip();
    });
</script>