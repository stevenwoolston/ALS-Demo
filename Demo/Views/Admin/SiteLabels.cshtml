@{
    ViewBag.Title = "Manage Site Labels";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<form action="#" method="get">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <label for="sites">Select a Site</label>
                <select id="sites" name="sites">
                    <option>BHP Billiton</option>
                    <option>Cable Price</option>
                    <option>Caltest</option>
                    <option>Chevron</option>
                    <option>Clark Equipment Fluid Analysis</option>
                    <option>Detecta Online</option>
                    <option>Ensco</option>
                    <option>GulfWestern</option>
                    <option>JohnDeere</option>
                    <option>Parman Energy</option>
                    <option>Petrobras</option>
                    <option>Phillips 66</option>
                    <option>Porter Group Oil Analysis</option>
                    <option>Purolator</option>
                    <option>Rio Tinto Oil Analysis</option>
                    <option>Shell Care</option>
                    <option>Valvoline Fluid Analysis</option>
                    <option>Webtrieve8</option>
                </select>
            </div>
        </div>
        <div class="row-fluid">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th role="columnheader" class="pri-bg-colour pri-fg-colour"><input type="checkbox" class="checkbox" /></th>
                        <th role="columnheader" class="pri-bg-colour pri-fg-colour">Label Name</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var Total = 0;
                        while (Total < 10)
                        {
                            Total += 1;
                        <tr>
                            <td>
                                <input type="checkbox" class="checkbox" /></td>
                            <td>Label Format @Total</td>
                        </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="form-actions">
            <div class="pull-right">
                <input type="reset" value="Clear" class="btn-link" />&nbsp;&nbsp;
                <input type="submit" class="btn btn-primary" value="Save Changes" />
            </div>
        </div>
</form>
<script>
    $(function () {
        $(".btn-primary").click(function () {
            toastr.success("Those changes were successfully updated.", "Webtrieve9 Says");
            $(".modal").modal("hide");
        });
    })
</script>
