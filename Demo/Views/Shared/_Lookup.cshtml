<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered datatable">
    <thead>
        <tr>
            <td class="pri-bg-colour pri-fg-colour">
                <input type="checkbox" /></td>
            <th role="columnheader" class="sorting pri-bg-colour pri-fg-colour">Company Name</th>
            <th role="columnheader" class="sorting pri-bg-colour pri-fg-colour">Customer No</th>
            <th role="columnheader" class="sorting pri-bg-colour pri-fg-colour">Contact</th>
            <th role="columnheader" class="sorting pri-bg-colour pri-fg-colour">Street</th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 0;
            while (i < 65)
            {
                i += 1;
            <tr>
                <td>
                    <input type="checkbox" /></td>
                <td>
                    <a href="#" class="companydetails" 
                        data-content="Company Name" 
                        data-original-title="Company Details">Cipac Services</a>
                </td>
                <td>167802</td>
                <td></td>
                <td>rue Gervolino</td>
            </tr>
            }
        }
    </tbody>
</table>
