<form id="update" method="get">
    <div class="row-fluid">
        <label class="span2" for="companyname">Company Name</label>
        <div class="span10">
            <a href="/equipment/editcompany/" title="Click to view Company Details">ALS Tribology - NSW</a>
        </div>
    </div>

    <div class="row-fluid">
        <label class="span2" for="companyname">Unit ID:</label>
        <div class="span3">
            <input type="text" id="name" name="companyname" />
        </div>

        <label class="span2" for="make">Make:</label>
        <div class="span3">
            <input type="text" id="make" name="make" />
        </div>
    </div>

    <div class="row-fluid">

        <label class="span2" for="model">Model:</label>
        <div class="span3">
            <input type="text" id="model" name="model" />
        </div>

        <label class="span2" for="sector">Sector:</label>
        <div class="span3">
            <input type="text" id="sector" name="sector" />
        </div>
    </div>

    <div class="row-fluid">
        <label class="span2" for="operation">Operation:</label>
        <div class="span3">
            <input type="text" id="operation" name="operation" />
        </div>

        <label class="span2" for="serialnumber">Serial Number:</label>
        <div class="span3">
            <input type="text" id="serialnumber" name="serialnumber" />
        </div>
    </div>

    <div class="row-fluid">
        <label class="span2" for="site">Site:</label>
        <div class="span3">
            <input type="text" id="site" name="site" />
        </div>

        <label class="span2" for="warrantydate">Warranty Date:</label>
        <div class="span3">
            <div class="input-append">
                <input type="text" id="warrantydate" class="datepicker textbox input-small" />
                <span class="add-on"><i class="icon-calendar"></i></span>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <label class="span2" for="warrantyage">Warranty Age:</label>
        <div class="span3">
            <input type="text" id="warrantyage" name="warrantyage" />
        </div>

        <label class="span2" for="fluidage">Age Measure:</label>
        <div class="span3">
            <select class="input-small">
                <option value=""></option>
                <option value="Date">Date</option>
                <option value="Days">Days</option>
                <option value="Hours">Hours</option>
                <option value="Hrs" selected="">Hrs</option>
                <option value="Kms">Kms</option>
                <option value="Ltr">Ltr</option>
                <option value="Mi">Mi</option>
                <option value="Miles">Miles</option>
                <option value="Min">Min</option>
                <option value="Mths">Mths</option>
                <option value="Sec">Sec</option>
                <option value="Tonne">Tonne</option>
                <option value="Yrs">Yrs</option>
            </select>
        </div>
    </div>

    <div class="row-fluid">
        <label class="span2" for="brand">Year Of Manufacture:</label>
        <div class="span3">
            <input type="text" id="brand" name="brand" />
        </div>

        <label class="span2" for="description">Description:</label>
        <div class="span3">
            <input type="text" id="description" name="description" />
        </div>
    </div>

    <div class="row-fluid">
        <label class="span2" for="articlebody">Comment:</label>
        <div class="span8">
            <textarea class="span10 richtext" id="articlebody"></textarea>
        </div>
    </div>

    <div class="form-actions">
        <div class="pull-right">
            <button type="reset" class="btn btn-link">Clear</button>
            <button id="save" class="btn btn-primary"><i class="icon-save"></i>Save Changes</button>
        </div>
    </div>

</form>
