                <!-- Carousel nav -->
                <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
                <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
            </div>
        </div>

        <div class="container-fluid span4">
            <form id="logoncredentials" name="logoncredentials" action="/" method="post" class="shaded rounded-border form-horizontal row-fluid">
                <fieldset>
                    <legend>
                        Log On
                        <span class="pull-right"><a href="/user/new" class="btn btn-link"><i class="icon-edit"></i>Register</a></span>
                    </legend>
                    <div class="row-fluid control-group">
                        <label class="control-label" for="Username">UserName:</label>
                        <div class="controls">
                            <input type="text" id="username" class="input-small" name="username" placeholder="UserName">
                        </div>
                    </div>
                    <div class="row-fluid control-group">
                        <label class="control-label" for="password">Password</label>
                        <div class="controls">
                            <input type="password" id="password" class="input-small" name="password" placeholder="Password">
                        </div>
                    </div>
                    <div class="row-fluid control-group">
                        <label class="control-label" for="password">Language</label>
                        <div class="controls">
                            <select class="input-small">
                                <option>English</option>
                                <option>French</option>
                                <option>Spanish</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-actions" style="padding-left:0px;">
                        <div class="pull-right">
                            <a href="/user/resetpassword/" class="btn btn-link">Forgot Your Password?</a>&nbsp;&nbsp;
                            <button class="btn btn-primary"><i class="icon-key"></i>Logon</button>
                        </div>
                    </div>
                </fieldset>
            </form>

            <div class="row-fluid shaded rounded-border padding-medium">
                <h4>Useful Links</h4>
                <ul>
                    <li>Maximize Equipment reliability.</li>
                    <li>Minimize downtime.</li>
                    <li>Reduce unscheduled maintenance incidents.</li>
                    <li>Improve asset reliability.</li>
                    <li>Increase profitability.</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('.carousel').carousel();

        $("#logoncredentials").validate({
            rules: {
                // simple rule, converted to {required:true}
                username: "required",
                password: "required"
            },
            messages: {
                username: "Required",
                password: "Required"
            }
        });

        $("#logoncredentials").on('submit', function (e) {
            var isvalidate = $("#logoncredentials").valid();
            if (isvalidate) {
                //e.preventDefault();
            }

        });

        $(".google-translate").hide();
    });
</script>
