@{
    ViewBag.Title = "Feedback History Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li>Feedback History Search</li>
</ul>

<div class="container-fluid">
    <form class="row-fluid form-horizontal shaded rounded-border" id="searchform" action="/feedback/search" method="post" name="searchform">
        <fieldset>
            <legend>Search for Feedback</legend>

            <div class="controls-row controls">

                <div class="span4 control-group">
                    <label class="control-label fields" for="unitid">Feedback Subject</label>
                    <div class="controls">
                        <select class="input-medium">
                            <option>All</option>
                            <option>General Comment</option>
                            <option>Exception Comment</option>
                            <option>Oil Change</option>
                        </select>
                    </div>
                </div>

                <div class="span8 control-group">
                    <label class="control-label fields" for="unitid">Posted Date</label>
                    <div class="controls">
                        <div class="input-append">
                            <input type="text" class="textbox input-small datepicker" placeholder="From Date" />
                            <span class="add-on"><i class="icon-calendar"></i></span>
                        </div>
                        &nbsp; 
                        <div class="input-append">
                            <input type="text" class="textbox input-small datepicker" placeholder="To Date" />
                            <span class="add-on"><i class="icon-calendar"></i></span>
                        </div>
                    </div>
                </div>

            </div>

            <div class="controls-row controls">

                <div class="span4 control-group">
                    <label class="control-label fields" for="unitid">Company</label>
                    <div class="controls">
                        <div class="input-append">
                            <input type="text" class="textbox input-small" placeholder="0 Item(s)" />
                            <button class="btn btn-lookup" data-toggle="tooltip" title="Click for Lookup" type="button"><i class="icon-search"></i></button>
                        </div>
                    </div>
                </div>

                <div class="span4 control-group">
                    <label class="control-label fields" for="unitid">Unit</label>
                    <div class="controls">
                        <div class="input-append">
                            <input type="text" class="textbox input-small" placeholder="0 Item(s)" />
                            <button class="btn btn-lookup" data-toggle="tooltip" title="Click for Lookup" type="button"><i class="icon-search"></i></button>
                        </div>
                    </div>
                </div>

                <div class="span4 control-group">
                    <label class="control-label fields" for="unitid">Compartment</label>
                    <div class="controls">
                        <div class="input-append">
                            <input type="text" class="textbox input-small" placeholder="0 Item(s)" />
                            <button class="btn btn-lookup" data-toggle="tooltip" title="Click for Lookup" type="button"><i class="icon-search"></i></button>
                        </div>
                    </div>
                </div>

            </div>

            <div class="controls-row controls">
               
                <div class="span4 control-group">
                    <label class="control-label fields" for="unitid">Sample Key</label>
                    <div class="controls">
                        <input type="text" class="textbox input-small" placeholder="Sample Key" />
                    </div>
                </div>

                <div class="span4 control-group">
                    <label class="control-label fields" for="unitid">Problem Code</label>
                    <div class="controls">
                        <div class="input-append">
                            <input type="text" class="textbox input-small" placeholder="0 Item(s)" />
                            <button class="btn btn-lookup" data-toggle="tooltip" title="Click for Lookup" type="button"><i class="icon-search"></i></button>
                        </div>
                    </div>
                </div>

                <div class="span4 control-group">
                    <label class="control-label fields" for="unitid">Customer Severity</label>
                    <div class="controls">
                        <select class="input-medium">
                            <option>All</option>
                            <option>Low</option>
                            <option>Moderate</option>
                            <option>Normal</option>
                            <option>Urgent</option>
                        </select>
                    </div>
                </div>

            </div>

            <div class="form-actions">
                <div class="pull-right">
                    <button class="btn btn-link">Clear</button>
                    <button class="btn btn-primary"><i class="icon-search"></i>&nbsp;Search</button>
                </div>
            </div>

        </fieldset>
    </form>
</div>

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span10">
            @Html.Partial("_FeedbackResults")
        </div>
        <div class="span2">
            <div class="row-fluid">
                <div class="span12">
                    <div class="nav nav-list quick-search-sidenav rounded-border">
                        <div>
                            <legend><i class="icon-lightbulb"></i>&nbsp;Further Actions</legend>
                            <button class="btn btn-primary"><i class="icon-check-sign"></i>&nbsp;Mark Selected as Viewed</button>
                            <div class="btn-group">
                                <button class="btn btn-info"><i class="icon-cloud-download"></i>&nbsp;Export Results As XML</button>
                                <button class="btn btn-info dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
                                <ul class="dropdown-menu">
                                    <li><a href="#"><i class="icon-cloud-download"></i>&nbsp;Export Results As CSV</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#"><i class="icon-cloud-download"></i>&nbsp;Export Selection As XML</a></li>
                                    <li><a href="#"><i class="icon-cloud-download"></i>&nbsp;Export Selection As CSV</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {

        $(".btn-lookup").click(function () {

            $("#lookupdialog .datatable").css({ "width": "100%" });

            $("#lookupdialog")
                .draggable()
                .css({ "width": "900px", "margin-left": "-450px" })
                .modal("show");

            $("#lookupdialog .modal-body").css({ "min-height": "590px" });

        });

        $("[title]").tooltip();
        $(".datepicker").datepicker();
    });
</script>
